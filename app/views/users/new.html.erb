<% stylesheet_link_tag 'application' %>

<section class="user">
    <div class="sign-up-forms user_options-forms" id="user_options-forms">
      <div class="user_forms-login">

        <h2 class="forms_title">Sign Up</h2>
        <form class="forms_form">
          <fieldset class="forms_fieldset">
          <div class="forms_field">
            <%= form_for @user do |f| %>
              <% if @user.errors.any? %>
                <div class="error_messages">
                  <h2>Form is invalid</h2>
                  <ul>
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <%
=begin%>
 <div class="forms_field">
                <%= f.label :first_name %><br />
                <%= f.text_field :first_name, class:'forms_field-input', placeholder:'First Name' %>
              </div>
              <div class="forms_field">
                <%= f.label :last_name %><br />
                <%= f.text_field :last_name, class:'forms_field-input', placeholder:'Last Name' %>
              </div> 
              <div class="forms_field">
                <%= f.label :username %><br />
                <%= f.text_field :username, class:'forms_field-input', placeholder:'Username' %>
              </div>                            
<%
=end%>
              <div class="forms_field">
                <%= f.label :email %><br />
                <%= f.text_field :email, class:'forms_field-input', placeholder:'Email' %>
              </div>
              <div class="forms_field">
                <%= f.label :password %><br />
                <%= f.password_field :password, class:'forms_field-input', placeholder:'Password' %>
              </div>
              <div class="forms_field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, class:'forms_field-input', placeholder:'Password Confirmation' %>
              </div>
              <div class=" actions" style="color:white;"><%= f.submit "Sign Up", class: 'forms_buttons-action' %></div>
            <% end %>
</div>
</fieldset>
</form>
</div>
</div>
</section>